<h1>Friends</h1>

<% @friends.each do |friend| %><br><br>
  <img src="<%= friend.pic %>"><br>
  <%= friend.name %><br>
  <% if @user.friends.find(friend.id) %>
    <%= "Following" %>
  <% else %>
    <%= "Click to Follow!" %>
  <% end %>
  <br>
  <% if friend.location %>
    <%= friend.location %>
  <% end %>
<% end %>

